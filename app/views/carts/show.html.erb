<% #shoping-cart view  %>

<div class="container">
  <div class="row mb-5">
    <div class="col-12">
      <%= render partial:'shared/navigation' %>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div class="row border-bottom mr-1">
        <div class="col-12">
          <h3 class="text-muted">Shopping cart</h3>
        </div>
      </div>
      <% 4.times do %>
        <%= render partial: 'shared/full_product_card' %>
      <% end %>
      <div class="row border-top mb-5 pt-3">
        <div class="col-12">
          <button type="button" class="btn btn-primary w-25">Next</button>
          <button type="button" class="btn btn-light w-25 ml-3">Cancel</button>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="row">
        <div class="cal-12 ">
          <h3 class="text-muted">Summary</h3>
        </div>
      </div>
      <div class="row">
        <div class="cal-12 border-top border-bottom">
          <input type="text" class="form-control-plaintext font-weight-bold" placeholder="ENTER COUPON CODE">
        </div>
      </div>

    </div>
  </div>
</div>