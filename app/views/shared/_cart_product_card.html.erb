<% products.each_with_index do |product,i|%>
<div class="row mb-4">
  <div class="col-10">
    <div class="card mb-3 border-0" >
      <div class="row no-gutters">
        <div class="col-md-5" style="background: #868e96;">
          <%= image_tag(product.image.url,class:'card-img-top h-100') %>
        </div>
        <div class="col-md-7">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text d-inline"><%= product.description %></p>
            <div class="card-footer">
              <small>$<%= ordered_products[i].price %></small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-2 d-flex justify-content-center align-items-center">
    <input type="number" value="1" min="1" max="100" class="form-control">
    <button type="button" class="close align-self-start" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<% end %>