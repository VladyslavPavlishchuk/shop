<div class="container">
  <%= image_tag "logo", alt: "LOGO"%>
  <br>
  <div class=<%= resource.errors.any? ? "registration_error" : "registration"%>>
    <h2>Register</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "registration_form"}) do |f| %>
        <hr><br>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: ' Email' %>
        </div>
        <div class="field">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: ' Username' %>
        </div>
        <div class="field">
          <!--
          <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> -->
          <%= f.password_field :password, autocomplete: "new-password", placeholder: ' Password' %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: ' Retype password' %>
        </div>
        <br>
        <div class="buttons">
        <div class="actions">
          <%= f.submit "Register", class:'blue_btn' %>
        </div>
        <div class="actions">
          <%= link_to "Sign in", new_session_path(resource_name),class: 'grey_btn' %>
        </div>
        </div>
    <% end %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
